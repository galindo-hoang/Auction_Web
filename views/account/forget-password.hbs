{{#section 'header'}}
    <link rel="stylesheet" href="/public/register.css">
{{/section}}

<!--<div class="my-xxl-5"></div>-->
{{#if error}}
    <div class="alert alert-warning alert-dismissible fade show" role="alert" style="position: absolute; width: 100%; top: 0;">
        <strong>{{error}}!</strong>
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
{{/if}}
<form id="formForget" method="post">
    <div class="body-register forgot-align" style="padding-top: 80px; padding-bottom: 91px;">
        <div class="container-register">
            <div class="content-register">
                <div class="title">
                    <h1>
                        Nhập tài khoản Email
                    </h1>
                </div>
                <div>
                    </div>
                        <div class="grid mb-3">
                            <label for="email">Email:</label>
                        </div>
                        <div class="form-group">
                            <input class="form-control input-sm" id="email" type="text" name="email" autofocus>
                        </div>
                        <div style="height: 20px;"></div>
                        <div class="btn-register">
                            <input class="text-register" type="submit" id="Submit" value="Tiếp tục">
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</form>
