{{#section 'header'}}
    <link rel="stylesheet" href="/public/register.css">
{{/section}}

<form id="formRegister" method="post">
    <div class="body-register" style="padding-top: 36px;padding-bottom: 35px;">
        <div class="container-register">
            <div class="content-register">
                <div class="title text-center">
                    <h1>
                        Đăng ký tài khoản
                    </h1>
                </div>
                <div class="container-information">
                    <div>
                        <div class="grid">
                            <label for="email" class="mb-2">Email</label>
                        </span>
                        </div>
                        <div class="form-group">
                            <input class="form-control input-sm" id="email" type="email" name="email" autofocus>
                        </div>


                        <div class="grid">
                            <label for="name" class="mb-2">Họ và tên</label>
                            </span>
                        </div>
                        <div class="form-group">
                            <input class="form-control input-sm" id="name" type="text" name="name" minlength="8">
                        </div>


                        <div class="grid">
                            <label for="password" class="mb-2">Mật khẩu</label>
                        </div>
                        <div class="form-group">
                            <input class="form-control input-sm" id="password" type="password" name="password">
                        </div>

                        <div class="grid">
                            <label for="password" class="mb-2">Xác nhận mật khẩu</label>
                        </div>
                        <div class="form-group">
                            <input class="form-control input-sm" id="Conpassword" type="password" name="ConPassword">
                        </div>

                        <div class="g-recaptcha mt-4" data-sitekey="6Le6CncdAAAAAGRBfTfdUzVKeTguRz1Q9lojjCfh"></div>

                        <div class="grid"></div>
                        <div class="btn-register">
                            <input class="text-register" type="submit" value="Đăng ký">
                        </div>
                    </div>
                </div>
<!--                <div class="grid container-forgot">-->
<!--                    <a href="/">-->
<!--                        <div class="content-forgot">-->
<!--                            Forgot password?-->
<!--                        </div>-->
<!--                    </a>-->
<!--                </div>-->
            </div>
        </div>
    </div>
</form>

{{#section 'footer'}}
    <script src="https://www.google.com/recaptcha/api.js" async defer></script>
    <script>
        $('#formRegister').on('submit',function (e){
            e.preventDefault();

            const formData = new FormData(document.getElementById("formRegister"))
            const captchaResponse = formData.get("g-recaptcha-response");

            console.log([...formData]);
            const email = $('#email').val();
            if(email.length === 0 ){
                alert('Email invalid!');
                location.reload();
                return;
            }

            const pass = $('#password').val();
            const conpass = $('#Conpassword').val();
            if(pass !== conpass){
                alert('Confirm your password');
                location.reload();
                return;
            }
            $.getJSON(`/account/register/check?email=${email}&recaptcha=`+encodeURI(captchaResponse),function (data){
                if(data === true){
                    $('#formRegister').off('submit').submit();
                }else if(data === 1){
                    alert('Please ReCaptcha');
                    location.reload();
                }else{
                    alert('Email exists');
                    location.reload();
                }
            });


        });
    </script>
{{/section}}