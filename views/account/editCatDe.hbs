<div class="container-fluid mt-4">
    <div class="row">

        {{> account-layout}}

        <div class="col-sm-9">
            <form id="editForm" method="post">
              <div class="card">
                <h4 class="card-header">
                  Chỉnh sửa danh mục
                </h4>
                <div class="card-body">
                  <div class="form-group">
                    <label for="txtCatDeID">ID danh mục</label>
                    <input type="text" class="form-control mt-2" id="txtCatDeID" name="CatDeID" readonly value="{{this.categories_detail.CatDeID}}">
                  </div>
                  <div class="form-group mt-3">
                    <label for="txtCatDeName">Tên danh mục</label>
                    <input type="text" class="form-control mt-2" id="txtCatDeName" name="CatDeName" value="{{this.categories_detail.CatDeName}}" autofocus>
                  </div>
                </div>
                <div class="card-footer text-muted">
                  <a class="btn btn-outline-success" href="/admin/editCatDe/" role="button">
                    <i class="fa fa-backward" aria-hidden="true"></i>
                    Trở về
                  </a>
                  <button type="submit" class="btn btn-danger" formaction="/admin/editCatDe/del">
                    <i class="fa fa-trash-o" aria-hidden="true"></i>
                    Xoá
                  </button>
                  <button type="submit" class="btn btn-primary" formaction="/admin/editCatDe/save">
                    <i class="fa fa-check" aria-hidden="true"></i>
                    Lưu
                  </button>
                </div>
              </div>
            </form>
        </div>
    </div>
</div>