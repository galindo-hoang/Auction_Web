{{#section 'header'}}
    <link rel="stylesheet" href="/public/register.css">
{{/section}}

<form id="formLogin" method="post">
    <div class="body-register">
        <div class="container-register">
            <div class="content-register">
                <div class="title">
                    <h1>
                        Login
                    </h1>
                </div>
                <div class="container-information">
                    <div>
                        <div class="grid">
                            <label for="email" class="mb-2">Email</label>
                            <span class="mb-2">
                            Need an account?
                            <a href="/account/register">
                                sign up
                            </a>
                        </span>
                        </div>
                        <div class="form-group">
                            <input class="form-control input-sm" id="email" type="text" name="email" autofocus>
                        </div>

                        <div class="grid">
                            <label for="password" class="mb-2">Password</label>
                        </div>
                        <div class="form-group">
                            <input class="form-control input-sm" id="password" type="password" name="password">
                        </div>

                        <div class="grid"></div>

                        <div class="btn-register">
                            <input class="text-register" type="submit" value="Log In">
                        </div>
                    </div>
                </div>

                <div class="grid container-forgot">
                    <a href="/account/FP">
                        <div class="content-forgot">
                            Forgot password?
                        </div>
                    </a>
                </div>
            </div>
        </div>
    </div>
</form>

{{#section 'footer'}}
    <script>
        $('#formLogin').on('submit',function (e){
            e.preventDefault();

            const email = $('#email').val();
            if(email.length === 0 ){
                alert('email invalid!');
                return;
            }
            $.getJSON(`/account/login/check?email=${email}&password=${$('#password').val()}`,function (data){
                if(data === true){
                    $('#formLogin').off('submit').submit();
                }else{
                    alert('email not exists');
                }
            });
        });
    </script>
{{/section}}