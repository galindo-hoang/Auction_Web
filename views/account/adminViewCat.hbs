<div class="container-fluid mt-4">
    <div class="row">

        {{> account-layout}}

        <div class="col-sm-9">
            <div class="card">
                <h4 class="card-header d-flex justify-content-between container-fluid">
                    Danh mục cấp 1
                    <a class="btn btn-sm btn-outline-primary" href="/admin/editCat/add" role="button">
                        <i class="fa fa-plus" aria-hidden="true"></i>
                        Thêm danh mục
                    </a>
                </h4>
                <table class="table table-hover">
                    <thead>
                    <tr>
                        <th scope="col">#</th>
                        <th scope="col">Tên danh mục</th>
                        <th scope="col">&nbsp;</th>
                    </tr>
                    </thead>
                    <tbody>
                    {{#each LclCate}}
                        <tr>
                            <th scope="row">{{CatID}}</th>
                            <td>{{CatName}}</td>
                            <td class="text-sm-end">
                                <a class="btn btn-primary" href="/admin/editCat/edit/{{this.CatID}}" style="background-color: darkcyan">
                                    <i class="fa fa-pencil-ruler" aria-hidden="true"></i>
                                    Chỉnh sửa
                                </a>
                            </td>
                        </tr>
                    {{/each}}
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>