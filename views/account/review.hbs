<div class="container-fluid mt-4 profile-view">
    <div class="row">

        {{> account-layout}}

        <div class="col-sm-8">
            <div class="card">
                <h4 class="card-header text-center text-white bg-secondary">
                    Nội dung đánh giá
                </h4>
                <table class="table table-hover">
                    <thead>
                    <tr>
                        <th scope="col" class="text-center">Đánh giá</th>
                        <th scope="col" class="text-center">Mã sản phẩm</th>
                        <th scope="col" class="text-center">Nội dung</th>
                        <th scope="col" class="text-center">Người đánh giá</th>
                    </tr>
                    </thead>
                    <tbody>
                    {{#each rates}}
                        <tr class="align-middle">
                            <th scope="row" class="text-center">
                                {{#if this.Rate}}
                                    <i class="fas fa-thumbs-up" style="color: blue"></i>
                                {{else}}
                                    <i class="fas fa-thumbs-down" style="color: red"></i>
                                {{/if}}
                            </th>
                            <td class="text-center">{{this.ProID}}</td>
                            <td>{{{this.Comment}}}</td>
                            <td class="text-center">{{this.UserName}}</td>
                        </tr>
                    {{/each}}
                    </tbody>
                </table>
            </div>
        </div>

    </div>
</div>