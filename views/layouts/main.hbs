<body>
<nav class="navbar navbar-expand-lg navbar-light bg-light">
    <div class="container">
        <a class="navbar-brand navbar-logo" href="/"><img class="logo" src="/public/imgs/logo/logo.png"></a>

        <ul class="navbar-nav mb-2 mb-lg-0 text-center">
            {{#each LclCate}}
                <li class="nav-item dropdown">
                    <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button" data-toggle="dropdown" aria-expanded="false">
                        {{this.CatName}}
                    </a>
                    <div class="dropdown-menu dropdown-menu-right" aria-labelledby="navbarDropdown">
                        {{#each this.CDList}}
                            <a class="dropdown-item" href="/views/byCatDe/{{this.CatDeID}}">
                                {{this.CatDeName}}
                            </a>
                            <div class="dropdown-divider"></div>
                        {{/each}}
                        <a class="dropdown-item" href="/views/byCat/{{this.CatID}}">
                            Xem tất cả
                        </a>
                    </div>
                </li>
            {{/each}}
        </ul>
        <form class="w-25" action="/views" method="post">
            <input class="form-control me-2" type="search" placeholder="Search" aria-label="Search" name="query">
            <input class="form-control me-2" type="hidden" placeholder="Search" aria-label="Search" name="page" value="1">
            <input class="form-control me-2" type="hidden" placeholder="Search" aria-label="Search" name="sort" value="0">
<!--            <button class="btn btn-outline-success" type="submit">Tìm kiếm</button>-->
        </form>
        <div>
            {{#if isLogin}}
                <a class="nav-link dropdown-toggle active" href="#" id="navbarDropdown" role="button" data-toggle="dropdown" aria-expanded="false">
                    Hi, <b>{{account.UserName}}!</b>
                </a>
                <div class="dropdown-menu dropdown-menu-right" aria-labelledby="navbarDropdown">
                    <a class="dropdown-item" href="/account/profile">
                        <i class="fa fa-user" aria-hidden="true"></i>
                        Xem thông tin
                    </a>
                    <div class="dropdown-divider"></div>
                    <form id="frmLogout" action="/account/signout" method="post">
                        <a class="dropdown-item" href="javascript: $('#frmLogout').submit();">
                            <i class="fa fa-sign-out-alt" aria-hidden="true"></i>
                            Đăng xuất
                        </a>
                    </form>
                </div>
            {{else}}
                <a href="/account/register" class="text-dark">
                    <i class="fa fa-user-plus" aria-hidden="true"></i>
                    Đăng ký
                </a>/
                <a href="/account/login" class="text-dark">
                    <i class="fa fa-sign-in-alt" aria-hidden="true"></i>
                    Đăng nhập
                </a>
            {{/if}}
        </div>
    </div>
</nav>
<div>
    {{{body}}}
</div>

