<div class="container-fluid mt-4">
    <div class="row">
        {{#if this.mess}}
            <div class="col-sm-12">
                <div class="alert alert-danger alert-dismissible fade show" role="alert">
                    <strong>{{mess}}</strong>
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                </div>
            </div>
        {{/if}}
        {{> account-layout}}

        <div class="col-sm-9">
            <form id="editForm" method="post">
                <div class="card">
                    <h4 class="card-header">
                        Chỉnh sửa danh mục
                    </h4>
                    <div class="card-body">
                        <div class="form-group">
                            <label for="txtCatID">ID danh mục</label>
                            <input type="text" class="form-control mt-2" id="txtCatID" name="CatID" readonly
                                   value="{{this.category.CatID}}">
                        </div>
                        <div class="form-group mt-3">
                            <label for="txtCatName">Tên danh mục</label>
                            <input type="text" class="form-control mt-2" id="txtCatName" name="CatName"
                                   value="{{this.category.CatName}}" autofocus>
                        </div>
                    </div>
                    <div class="card-footer text-muted">
                        <a class="btn btn-outline-success" href="/admin/editCat/" role="button">
                            <i class="fa fa-backward" aria-hidden="true"></i>
                            Trở về
                        </a>
                        <button type="submit" class="btn btn-danger" formaction="/admin/editCat/del"
                                onclick="clickedDelete(event)">
                            <i class="fa fa-trash-o" aria-hidden="true"></i>
                            Xoá
                        </button>
                        <button type="submit" class="btn btn-primary" formaction="/admin/editCat/save">
                            <i class="fa fa-check" aria-hidden="true"></i>
                            Lưu
                        </button>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>

{{#section 'footer'}}
    <script>
        function clickedDelete(e) {
            if (!confirm('Xác nhận xoá danh mục?')) {
                e.preventDefault();
            }
        }
    </script>
{{/section}}