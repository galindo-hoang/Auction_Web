<div class="container-fluid mt-4">
    <div class="row">

        {{> account-layout}}

        <div class="col-sm-9" id="adminViewSeller-view">
            <div class="card">
                <h4 class="card-header d-flex justify-content-between container-fluid text-white bg-secondary">
                    Danh sách tài khoản seller
                </h4>
                <table class="table table-hover mt-2">
                    <thead>
                    <tr>
                        <th scope="col" class="text-center">ID</th>
                        <th scope="col" class="text-center">Email</th>
                        <th scope="col" class="text-center">Username</th>
                        <th scope="col" class="text-center">&nbsp;</th>
                    </tr>
                    </thead>
                    <tbody>
                        {{#each this.sellerList}}
                            <tr class="align-middle">
                                <td class="text-center">{{UserID}}</td>
                                <td class="text-center">{{UserEmail}}</td>
                                <td class="text-center">{{UserName}}</td>
                                <td class="text-sm-end">
                                    <form method="post" id="">
                                        <button type="submit" class="btn btn-danger" value="{{UserID}}" name="UserID" formaction="/admin/editAcc/downgrade" onclick="clickedDelete(event)">
                                            Hạ cấp&nbsp;
                                            <i class="fa fa-arrow-down" aria-hidden="true"></i>
                                        </button>
                                    </form>
                                </td>
                            </tr>
                        {{/each}}
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

{{#section 'footer'}}
    <script>
        const register_view = document.getElementById("adminViewSeller-view")
        const height = Math.max(register_view.offsetHeight,window.innerHeight)-(document.getElementById("header-main").offsetHeight + document.getElementById("footer-main").offsetHeight)
        register_view.style.height = (height - 24) + "px";

        function clickedDelete(e) {
            if (!confirm('Xác nhận hạ cấp tài khoản?')) {
                e.preventDefault();
            }
        }
    </script>
{{/section}}